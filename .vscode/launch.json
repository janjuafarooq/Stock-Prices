{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/web/src",
            "userDataDir": "${workspaceRoot}/.chrome",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "API",
            "program": "${workspaceRoot}/api/bin/www"
        }
    ]
}